<sv:root xmlns:sv="http://svsoft.net/tahoe/schema" xmlns="http://www.w3.org/1999/xhtml"
         xmlns:el="http://www.w3.org/1999/xhtml">

    <sv:import prefix="el" file="base/elements"/>

    <sv:block name="editor">
        <div id="${id}" class="editor ${class}" sv-controller="editor" sv-data="${id}">
            <placeholder>Your text</placeholder>
            <div class="edit-area" contenteditable="true"></div>
            <div class="tool-bar">
                <el:button class="strongButt"><i class="fa fa-bold"></i></el:button>
                <el:button class="codeButt"><i class="fa fa-code"></i></el:button>
                <el:button class="citeButt"><i class="fa fa-quote-right"></i></el:button>
                <el:button class="imgButt"><i class="fa fa-picture-o"></i></el:button>
                <el:button class="linkButt"><i class="fa fa-link"></i></el:button>
            </div>
        </div>
    </sv:block>
</sv:root>